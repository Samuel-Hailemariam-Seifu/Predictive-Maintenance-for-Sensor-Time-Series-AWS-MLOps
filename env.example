# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=predictive-maintenance-data
SAGEMAKER_ROLE=arn:aws:iam::123456789012:role/SageMakerExecutionRole

# Kinesis Configuration
KINESIS_STREAM_NAME=sensor-data-stream
KINESIS_SHARD_COUNT=1

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=predictive-maintenance

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/predictive_maintenance
REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# Alert Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Model Configuration
MODEL_RETRAIN_INTERVAL=24  # hours
ANOMALY_THRESHOLD=0.8
HEALTH_SCORE_THRESHOLD=0.7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
